<Window x:Class="ScriptAdminCSharp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScriptAdminCSharp"
        mc:Ignorable="d"
        Title="Script Admin Remote Session" Height="500" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Zone de recherche -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <TextBox x:Name="SearchBox" Width="300" Height="28" Margin="0,0,10,0"/>
            <Button x:Name="BtnSearch" Content="Rechercher" Width="120" Height="28" Click="BtnSearch_Click"/>
        </StackPanel>

        <!-- Liste des résultats -->
        <ListView x:Name="ResultsList" Grid.Row="1" Height="250" Margin="0,0,0,10" SelectionMode="Single">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Nom" Width="200" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Type" Width="100" DisplayMemberBinding="{Binding Type}"/>
                    <GridViewColumn Header="Adresse IP" Width="150" DisplayMemberBinding="{Binding IP}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Boutons d'action -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,10,0,0" HorizontalAlignment="Center">
            <Button x:Name="BtnRDP" Content="RDP" Width="100" Margin="5" Click="BtnRDP_Click"/>
            <Button x:Name="BtnPS" Content="PowerShell distante" Width="150" Margin="5" Click="BtnPS_Click"/>
            <Button x:Name="BtnMSRA" Content="MSRA" Width="100" Margin="5" Click="BtnMSRA_Click"/>
            <Button x:Name="BtnCShare" Content="C$" Width="100" Margin="5" Click="BtnCShare_Click"/>
        </StackPanel>

        <!-- Zone d'information/logs -->
        <TextBox x:Name="LogBox" Grid.Row="3" Height="80" Margin="0,10,0,0" IsReadOnly="True" VerticalScrollBarVisibility="Auto"/>
    </Grid>
</Window>
